<fui:FluentWindow x:Class="LyricStudio.Views.MainWindow"
                  xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:fui="urn:fischless.design"
                  xmlns:local="clr-namespace:LyricStudio"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:ui="using:FluentAvalonia.UI.Controls"
                  xmlns:views="clr-namespace:LyricStudio.Views"
                  xmlns:vm="using:LyricStudio.ViewModels"
                  Title="{x:Static local:AppConfig.PackName}"
                  Width="1000"
                  Height="600"
                  d:Background="#00FFFFFF"
                  d:DesignHeight="450"
                  d:DesignWidth="800"
                  Background="#272727"
                  DragDrop.AllowDrop="True"
                  Icon="/Assets/Images/Favicon.ico"
                  SystemDecorations="Full"
                  WindowStartupLocation="Manual"
                  mc:Ignorable="d">
    <Grid>
        <fui:ServiceLocator Type="{x:Type views:MainView}" />
    </Grid>
</fui:FluentWindow>
